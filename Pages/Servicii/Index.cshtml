@page "/"
@model Proiect_.NET_Hair_salon.Pages.Servicii.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Serviciu[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serviciu[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serviciu[0].Durata)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serviciu[0].Hairstylist.NumeComplet)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Serviciu[0].CategoriiServiciu)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ServiciuD.Servicii) {
            string selectedRow = "";
            if(item.ID == Model.ServiciuID){
                selectedRow = "table-succes";
            }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
                Ron
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Durata)
                min
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Hairstylist.NumeComplet)
            </td>

            <td>
                @{
                    foreach(var categorie in item.CategoriiServiciu)
                    {
                        @categorie.Categorie.ID @: @categorie.Categorie.NumeCategorie <br/>
                    }
                }
            </td>

            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
